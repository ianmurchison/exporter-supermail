{* Fetch block from injection context, expected type 'Text' *}
{[ const block = context /]}

{* Generate rich text *}
{[ if (textBlockPlainText(block).count() === 0) ]}
    {* Uncomment this line if you want empty lines to show *}
    {*<p>&nbsp;</p>*}
{[ else ]}
    <p>{[ inject "page_block_rich_text" context block.text /]}</p>
{[/]}

